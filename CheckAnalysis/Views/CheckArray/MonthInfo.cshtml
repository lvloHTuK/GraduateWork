@{
}



<h1>Популярные продукты</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Продукт
            </th>
            <th>
                Ср. кол-во на чек
            </th>
            <th>
                Сумма
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.PopularProducts)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.AvgQuantity
                </td>
                <td>
                    @item.Sum
                </td>
            </tr>
        }
    </tbody>
</table>
