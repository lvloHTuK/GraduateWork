<h1>Популярные продукты</h1>

<div>
    <p class="Project_Analytics_Heading text-center">
        Time per Application
    </p>
    <svg viewBox="0 0 36 36" class="circular-chart">

        @foreach (var item in ViewBag.Circle)
        {
            <path class="that-circle" stroke="@item.Color" stroke-dasharray="@item.Dash_Stroke" d="M18 2.0845
                                a 15.9155 15.9155 0 0 1 0 31.831
                                a 15.9155 15.9155 0 0 1 0 -31.831" />
        }


        <text x="18" y="20.35" class="percentage">Круг</text>
        <text x="13" y="25" class="percentage_done"></text>

    </svg>
</div>

@foreach (var item in ViewBag.Circle){
    <div class="month" style="background-color: @item.Color" style="display: inline grid">
        <p >
            @item.Name
            @((int)item.Percent) %
        </p>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Продукт
            </th>
            <th>
                Цвет
            </th>
            <th>
                Ср. кол-во на чек
            </th>
            <th>
                Сумма
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.PopularProducts)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td class="square" style="background-color: @item.Color">

                </td>
                <td>
                    @item.AvgQuantity
                </td>
                <td>
                    @item.Sum
                </td>
            </tr>
        }
    </tbody>
</table>
